<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tarefas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site-dark.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <!-- Logo (somente ícone) -->
                <a class="navbar-brand" asp-area="" asp-controller="Tarefas" asp-action="Index">
                    <img src="https://img.icons8.com/ios-filled/50/ffffff/task.png"
                         alt="Logo" width="32" height="32">
                </a>

                <!-- Botão Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegação">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu esquerda -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">

                        <!-- Item Dashboard -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-clipboard-data-fill me-1"></i> Dashboard
                            </a>
                        </li>

                        <!-- Item Tarefas -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tarefas" asp-action="Index">
                                <i class="bi bi-list-task me-1"></i> Tarefas
                            </a>
                        </li>

                        <!-- Dropdown Cadastros -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="cadastroDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-folder-fill me-1"></i> Cadastros
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="cadastroDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Classificacoes" asp-action="Index">
                                        <i class="bi bi-tags-fill me-1"></i> Classificações
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Clientes" asp-action="Index">
                                        <i class="bi bi-people-fill me-1"></i> Clientes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Responsaveis" asp-action="Index">
                                        <i class="bi bi-person-badge-fill me-1"></i> Responsáveis
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Projetos" asp-action="Index">
                                        <i class="bi bi-briefcase-fill me-1"></i> Projetos
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

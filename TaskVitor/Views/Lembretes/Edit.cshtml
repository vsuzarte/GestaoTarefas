@model TaskVitor.Models.Lembrete

<h2 class="mb-4">Editar Lembrete</h2>

<form asp-action="Edit" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="col-12">
        <label asp-for="Titulo" class="form-label"></label>
        <input asp-for="Titulo" class="form-control" placeholder="Digite o título do lembrete..." />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Digite a descrição..."></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="DataHora" class="form-label"></label>
        <input asp-for="DataHora" type="datetime-local" class="form-control" />
        <span asp-validation-for="DataHora" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="DiasAntecedencia" class="form-label"></label>
        <input asp-for="DiasAntecedencia" type="number" min="0" class="form-control" />
        <span asp-validation-for="DiasAntecedencia" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary me-2">
            <i class="bi bi-check-lg me-1"></i> Salvar Alterações
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-lg me-1"></i> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
